<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Katana Offer Statistics System{% endblock %}</title>
        {% block stylesheets %}
            <link href="/css/bootstrap.min.css" rel="stylesheet">
            {#<link href="/css/bootstrap-multiselect.css" rel="stylesheet">#}
            <link href="/css/jquery.dataTables.css" rel="stylesheet">
            {#<link rel="stylesheet" href="/js/chosen_v0.13.0/chosen.min.css">#}
            <link rel="stylesheet" href="/js/chosen_1.0.0/chosen.min.css">
            <link rel="stylesheet" href="/css/chosen-bootstrap.css">
        {% endblock %}
        {% block inline_styles %}
            <style>
                body {
                    padding-top:55px;
                }

                .ajax_loader {
                    background: url("/img/loader.gif") no-repeat center center transparent;
                    width:100%;
                    height:100%;
                    z-index: 10;
                    position: fixed;
                }
            </style>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block javascripts %}
            <script src="/js/jquery-2.0.3.min.js"></script>
            <script src="/js/jquery.dataTables.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>
            {#<script src="/js/bootstrap-multiselect.js"></script>#}
            {#<script src="/js/chosen_v0.13.0/chosen.jquery.js"></script>#}
            <script src="/js/chosen_1.0.0/chosen.jquery.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}

        {% block inline_javascripts %}{% endblock %}
    </body>
</html>
