{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Affiliate list</h1>

    <table class="table table-striped table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Apiurl</th>
                <th>Json viewer</th>
                <th>Offer Url</th>
                <th>Partial Loading</th>
                <th>Active</th>
                <th>Need Auth</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('affiliate_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.apiUrl }}</td>
                <td><a href="http://jsonviewer.stack.hu/#{{ entity.apiUrl }}" target="_blank">json viewer</a></td>
                <td>{{ entity.offerUrl }}</td>
                <td>{{ entity.partialLoading }}</td>
                <td>{{ entity.active }}</td>
                <td>{{ entity.needAuth }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('affiliate_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('affiliate_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('affiliate_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
